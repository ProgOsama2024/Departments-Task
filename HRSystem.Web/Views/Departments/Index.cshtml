@{
}
@model List<DepartmentDto>;

<h1>Departments</h1>
<ul>
    @if(Model != null)
    {
        @foreach (var department in Model)
        {
            <li>
                <a asp-action="DepartmentHirarchy" asp-route-id="@department.Id">@department.Title</a>
            </li>
        }
    }
</ul>